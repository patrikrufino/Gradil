<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Light theme brushes (Fluent-like defaults) -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="#FF111111" />
    <SolidColorBrush x:Key="BorderBrush" Color="#FFD0D0D0" />
    <SolidColorBrush x:Key="AccentBrush" Color="#FF0078D7" />
    <!-- UI helper brushes -->
    <SolidColorBrush x:Key="OverlayBrush" Color="#40FFFFFF" />
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#FFBFBFBF" />
    <SolidColorBrush x:Key="FocusBackgroundBrush" Color="#FFFDFDFD" />
    <SolidColorBrush x:Key="PopupBackgroundBrush" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="PopupBorderBrush" Color="#FFD0D0D0" />
    <SolidColorBrush x:Key="IconBrush" Color="#FF444444" />
    <SolidColorBrush x:Key="HighlightBrush" Color="#FFF0F0F0" />
</ResourceDictionary>
