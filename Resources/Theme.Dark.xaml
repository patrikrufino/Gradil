<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Dark theme brushes (Fluent-like defaults) -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FF111111" />
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FF1B1B1B" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="#FFF0F0F0" />
    <SolidColorBrush x:Key="BorderBrush" Color="#FF3A3A3A" />
    <SolidColorBrush x:Key="AccentBrush" Color="#FF0078D7" />
    <!-- Button background (separate token so buttons can be themed independently) -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FF0078D7" />
    <!-- UI helper brushes -->
    <SolidColorBrush x:Key="OverlayBrush" Color="#26FFFFFF" />
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#FF3A3A3A" />
    <SolidColorBrush x:Key="FocusBackgroundBrush" Color="#FF2A2A2A" />
    <SolidColorBrush x:Key="PopupBackgroundBrush" Color="#FF252526" />
    <!-- Semi-transparent variant for popover backgrounds (90% opacity) -->
    <SolidColorBrush x:Key="PopupBackgroundBrushSemi" Color="#E6252526" />
    <SolidColorBrush x:Key="PopupBorderBrush" Color="#FF3A3A3A" />
    <SolidColorBrush x:Key="IconBrush" Color="#FFF0F0F0" />
    <SolidColorBrush x:Key="HighlightBrush" Color="#FF333333" />
    <!-- Success / alert brushes (green) -->
    <SolidColorBrush x:Key="SuccessForegroundBrush" Color="#FFDFF2E6" />
    <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="#1A28A745" /> <!-- 10% opacity, same green for consistency -->
    <SolidColorBrush x:Key="SuccessBorderBrush" Color="#4C28A745" /> <!-- 30% opacity -->
    <!-- ScrollBar brushes -->
    <SolidColorBrush x:Key="ScrollBarBackgroundBrush" Color="#FF313131" />
</ResourceDictionary>
