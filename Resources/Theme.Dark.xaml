<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Dark theme brushes (Fluent-like defaults) -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FF1E1E1E" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="#FFF0F0F0" />
    <SolidColorBrush x:Key="BorderBrush" Color="#FF3A3A3A" />
    <SolidColorBrush x:Key="AccentBrush" Color="#FF0078D7" />
    <!-- UI helper brushes -->
    <SolidColorBrush x:Key="OverlayBrush" Color="#26FFFFFF" />
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#FF3A3A3A" />
    <SolidColorBrush x:Key="FocusBackgroundBrush" Color="#FF2A2A2A" />
    <SolidColorBrush x:Key="PopupBackgroundBrush" Color="#FF252526" />
    <SolidColorBrush x:Key="PopupBorderBrush" Color="#FF3A3A3A" />
    <SolidColorBrush x:Key="IconBrush" Color="#FFF0F0F0" />
    <SolidColorBrush x:Key="HighlightBrush" Color="#FF333333" />
</ResourceDictionary>
