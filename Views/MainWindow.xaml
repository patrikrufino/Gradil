<Window x:Class="Gradil.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:Gradil.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Gradil.Views"
    xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
    
    mc:Ignorable="d"
    Loaded="Window_Loaded"
    Title="Gradil" Height="600" Width="800"
    Background="{DynamicResource BackgroundBrush}"
    Foreground="{DynamicResource ForegroundBrush}"
    WindowStyle="None"
    AllowsTransparency="False"
    Icon="/Gradil;component/gradil.ico">

    <WindowChrome.WindowChrome>
        <!-- Use custom caption buttons (works consistently on Windows 10 and 11) -->
        <shell:WindowChrome CaptionHeight="36" CornerRadius="0" GlassFrameThickness="0" UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <!-- Rounded indeterminate ProgressBar style -->
        <Style x:Key="RoundedIndeterminateProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="18" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" CornerRadius="9" SnapsToDevicePixels="True" Height="{TemplateBinding Height}" Width="{TemplateBinding Width}">
                            <Canvas x:Name="CanvasRoot" ClipToBounds="True">
                                <Border x:Name="Indicator" Background="{TemplateBinding Foreground}" CornerRadius="9" Height="{TemplateBinding Height}" Width="80" Canvas.Left="-80" />
                            </Canvas>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsIndeterminate" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard x:Name="IndeterminateStoryboard">
                                        <Storyboard RepeatBehavior="Forever">
                                                <!-- Use a constant 'To' value so the Storyboard can be frozen at runtime.
                                                    The ProgressBar instance sets Width=260; indicator width is 80, so moving to 260
                                                    makes the indicator slide fully across. If you need dynamic sizing later,
                                                    switch to a code-behind animation instead of a bound Storyboard. -->
                                                    <!-- Move the indicator from fully left (out of view) to fully inside the container
                                                        so the rounded corner remains visible at the right edge. For Width=260 and
                                                        indicator width=80 the final left position is 180 (260 - 80). -->
                                                    <DoubleAnimation Storyboard.TargetName="Indicator" Storyboard.TargetProperty="(Canvas.Left)" From="-80" To="180" Duration="0:0:1.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <StopStoryboard BeginStoryboardName="IndeterminateStoryboard" />
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <conv:FileNameConverter x:Key="FileNameConverter" />
    </Window.Resources>
    <!-- Outer container stretches, inner box is centered and constrained to 800x600 -->
    <Grid>
        <DockPanel>
        <!-- Custom title bar (content only) - reserve right padding so system caption buttons are visible -->
        <Border x:Name="TitleBar" DockPanel.Dock="Top" Height="36" Background="{DynamicResource TitleBarBackgroundBrush}" SnapsToDevicePixels="True" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Padding="8,0,8,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Window icon (bind to Window.Icon if set) -->
                <Image Grid.Column="0" Width="16" Height="16" VerticalAlignment="Center" Source="{Binding Icon, RelativeSource={RelativeSource AncestorType=Window}}" Margin="4,0,8,0" />

                <TextBlock x:Name="TitleText" Grid.Column="1" Text="Gradil" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{DynamicResource TitleBarForegroundBrush}" />

                <!-- Custom caption buttons (styled to match Fluent-ish look and work on Windows 10) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" shell:WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button Style="{StaticResource TitleBarButtonStyle}" Click="MinButton_Click" shell:WindowChrome.IsHitTestVisibleInChrome="True">—</Button>
                    <Button Style="{StaticResource TitleBarButtonStyle}" Click="MaxButton_Click" shell:WindowChrome.IsHitTestVisibleInChrome="True">▢</Button>
                    <Button Style="{StaticResource TitleBarCloseButtonStyle}" Click="CloseButton_Click" shell:WindowChrome.IsHitTestVisibleInChrome="True">✕</Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="800" MaxHeight="600" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        <!-- Linha 0: botão Selecionar antes do input -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Grid.Row="0">
            <Button Content="Selecionar arquivo" Command="{Binding SelectFileCommand}" Width="140" />
            <TextBox Text="{Binding SelectedFilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="8,0,0,0" Height="36" VerticalContentAlignment="Center" Width="520" IsReadOnly="True" Style="{StaticResource FluentTextBoxStyle}" />
        </StackPanel>

        <!-- Linha 1: apenas ComboBoxes de Linhas/Colunas -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,12,0,0">
            <StackPanel>
                <TextBlock Text="Linhas"/>
                <ComboBox SelectedValue="{Binding Rows, Mode=TwoWay}" Width="120">
                    <ComboBox.ItemsSource>
                        <x:Array Type="sys:Int32" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                            <sys:Int32>1</sys:Int32>
                            <sys:Int32>2</sys:Int32>
                            <sys:Int32>3</sys:Int32>
                            <sys:Int32>4</sys:Int32>
                            <sys:Int32>5</sys:Int32>
                            <sys:Int32>6</sys:Int32>
                            <sys:Int32>7</sys:Int32>
                            <sys:Int32>8</sys:Int32>
                            <sys:Int32>9</sys:Int32>
                        </x:Array>
                    </ComboBox.ItemsSource>
                </ComboBox>
            </StackPanel>

            <StackPanel Margin="16,0,0,0">
                <TextBlock Text="Colunas"/>
                <ComboBox SelectedValue="{Binding Cols, Mode=TwoWay}" Width="120">
                    <ComboBox.ItemsSource>
                        <x:Array Type="sys:Int32" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                            <sys:Int32>1</sys:Int32>
                            <sys:Int32>2</sys:Int32>
                            <sys:Int32>3</sys:Int32>
                            <sys:Int32>4</sys:Int32>
                            <sys:Int32>5</sys:Int32>
                            <sys:Int32>6</sys:Int32>
                            <sys:Int32>7</sys:Int32>
                            <sys:Int32>8</sys:Int32>
                            <sys:Int32>9</sys:Int32>
                        </x:Array>
                    </ComboBox.ItemsSource>
                </ComboBox>
            </StackPanel>
            <!-- Botão Gerar Gradil na mesma linha das seleções -->
            <Button Content="Gerar Gradil" Command="{Binding GenerateCommand}" Width="140" Margin="16,18,0,0" />
        </StackPanel>

        <!-- Linha 2: Ações (moved) -->
        <!-- Gerar Gradil foi movido para a mesma linha dos ComboBoxes -->
        
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <StackPanel>
                <Border Background="{DynamicResource SuccessBackgroundBrush}" BorderBrush="{DynamicResource SuccessBorderBrush}" BorderThickness="1" Padding="8" CornerRadius="6" Margin="0,0,0,8">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding StatusMessage}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding StatusMessage}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="{DynamicResource SuccessForegroundBrush}" />
                </Border>
                <TextBlock Text="Arquivos gerados" FontWeight="Bold" Margin="0,8,0,4" />
                <ListBox ItemsSource="{Binding GeneratedFiles}" SelectedItem="{Binding SelectedGeneratedFile}" Height="240">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource FileNameConverter}}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                    <Button Content="Imprimir" Command="{Binding OpenSelectedFileCommand}" Width="140" />
                    <Button Content="Abrir pasta" Command="{Binding OpenFolderCommand}" Width="120" Margin="8,0,0,0" />
                </StackPanel>
            </StackPanel>
            
            </Grid>

        </Grid>
        </DockPanel>

        <!-- Loading overlay shown while ViewModel.IsBusy is true (covers entire window) -->
        <Grid Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}" Background="#B3000000" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Border Width="320" Padding="16" CornerRadius="12" Background="{DynamicResource PopupBackgroundBrush}" BorderBrush="{DynamicResource PopupBorderBrush}" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.90">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="260" Height="18" Style="{StaticResource RoundedIndeterminateProgressBar}" Background="{DynamicResource PopupBorderBrush}" Foreground="#FF28A745" />
                    <TextBlock Text="Gerando..." Margin="0,12,0,0" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundBrush}" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
